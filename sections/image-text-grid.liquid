{
  "name": "Image Text Grid",
  "settings": [
    {
      "type": "text",
      "id": "title",
      "label": "Heading"
    },
    {
      "type": "text",
      "id": "sub_title",
      "label": "Sub Heading"
    },
    {
      "type": "textarea",
      "id": "desc",
      "label": "Description"
    },
  ],
  "blocks": [
    {
        "type": "Grid",
        "name": "Grid",
        "settings": [
            {
                "type": "image_picker",
                "id": "image",
                "label": "Image"
            },
            {
                "type": "text",
                "id": "title",
                "label": "Heading"
            },
            {
                "type": "text",
                "id": "sub_title",
                "label": "Description"
            },
            {
                "type": "url",
                "id": "link",
                "label": "Link"
            }
        ]
    }
  ],
  "presets": [
    {
      "name": "Image Text Grid",
      "category": "Image Text Grid"
    }
  ]
}
{% endschema %}