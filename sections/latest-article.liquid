<div class="latest-article-section">
<div class="page-width">
<div class="latest-article-title">
{% if section.settings.sub_title != blank %}
<h3>{{ section.settings.sub_title }}</h3>
{% endif %}
{% if section.settings.title != blank %}
<h2>{{ section.settings.title }}</h2>
{% endif %}
{% if section.settings.btn_title != blank and section.settings.btn_link != blank %}
<a href="{{ section.settings.btn_link }}">{{ section.settings.btn_title }}</a>
{% endif %}
</div>
<div class="latest-article">
{% for block in section.blocks %}
{% assign article = block.settings.article %}
{% if block.settings.article != blank %}
{% if forloop.index == 1 %}
<div class="latest-article-left">
<a href="{{ article.url }}" style="display:block;width:100%;height:100%;position:absolute;top:0;left:0;"></a>
<figure><img src="{{ article.image | img_url: 'master' }}" /></figure>
<div class="latest-article-left-desc">
<h4>{{ article.tags }}</h4>
<h2>{{ article.title }}</h2>
<p>By {{ article.author }} <span>|</span> {{ article.published_at | time_tag: format: 'date' }}</p>
</div>
</div>
{% else %}
{% if forloop.index == 2 %}
<div class="latest-article-right">
{% endif %}
<div class="latest-article-part">
<a href="{{ article.url }}" style="display:block;width:100%;height:100%;position:absolute;top:0;left:0;"></a>
<div class="latest-article-part-left">
<figure><img src="{{ article.image | img_url: 'master' }}" /></figure>
</div>
<div class="latest-article-part-right">
<h4>{{ article.tags }}</h4>
<h2>{{ article.title }}</h2>
<p>By {{ article.author }} <span>|</span> {{ article.published_at | time_tag: format: 'date' }}</p>
</div>
</div>
{% if forloop.index == 3 %}
</div>
{% endif %}
{% endif %}
{% endif %}
{% endfor %}
</div>
</div>
</div>




{% schema %}
{
  "name": "Latest Article",
  "settings": [
    {
      "type": "text",
      "id": "title",
      "label": "Heading"
    },
    {
      "type": "text",
      "id": "sub_title",
      "label": "Sub Heading"
    },
    {
      "type": "text",
      "id": "btn_title",
      "label": "Button Heading"
    },
    {
      "type": "url",
      "id": "btn_link",
      "label": "Button Link"
    }
  ],
  "blocks": [
    {
        "type": "Article",
        "name": "Article",
        "settings": [
            {
                "type": "article",
                "id": "article",
                "label": "Article"
            }
        ]
    }
  ],
  "presets": [
    {
      "name": "Latest Article",
      "category": "Latest Article"
    }
  ]
}
{% endschema %}